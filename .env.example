# Application Settings
APP_NAME=FastAPI Super SaaS Boilerplate
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=saas_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Connection (constructed from above)
DATABASE_URL=postgresql+asyncpg://postgres:change-this-secure-password@localhost:5432/saas_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# OAuth2 - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/auth/microsoft/callback

# Keycloak
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=saas-realm
KEYCLOAK_CLIENT_ID=saas-backend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# OpenAI / LLM
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# PyPI Version Check
PYPI_CHECK_ENABLED=true
PYPI_CHECK_INTERVAL_HOURS=24

# MinIO / S3 Object Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-secure-password
MINIO_HOST=localhost
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# File Storage (S3-compatible)
FILE_STORAGE_PROVIDER=s3
LOCAL_UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=50
AWS_S3_BUCKET=saas-uploads
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=change-this-secure-password
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:9000

# File Upload Restrictions
# ALLOWED_FILE_TYPES: Controls which file types can be uploaded
#   - Leave empty (default): Use built-in allow list (images, documents, text files)
#   - Set to "*": Allow ALL file types (except blocked ones)
#   - Comma-separated MIME types: Custom allow list (e.g., "image/jpeg,image/png,video/mp4")
ALLOWED_FILE_TYPES=

# Common MIME types for reference:
# Images: image/jpeg,image/png,image/gif,image/webp,image/svg+xml
# Documents: application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
# Spreadsheets: application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
# Text: text/plain,text/csv,text/markdown,application/json,text/html
# Video: video/mp4,video/mpeg,video/quicktime,video/x-msvideo,video/webm
# Audio: audio/mpeg,audio/wav,audio/ogg,audio/aac,audio/webm
# Archives: application/zip,application/x-rar-compressed,application/x-7z-compressed,application/x-tar

# BLOCKED_FILE_TYPES: Security block list (always enforced regardless of ALLOWED_FILE_TYPES)
#   - Executables and potentially dangerous files are blocked by default
#   - Add more MIME types if needed (comma-separated)
BLOCKED_FILE_TYPES=application/x-executable,application/x-dosexec,application/x-msdos-program

# Stripe / Billing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_API_VERSION=2025-09-30

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly

# Billing Configuration
BILLING_TRIAL_DAYS=14
BILLING_GRACE_PERIOD_DAYS=3
BILLING_SEND_RECEIPTS=true
BILLING_ALLOW_DOWNGRADES=true
